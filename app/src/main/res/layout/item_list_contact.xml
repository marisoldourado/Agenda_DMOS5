<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtv_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="nome"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtv_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="16dp"
        android:text="www"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txtv_firstname"
        app:layout_constraintTop_toBottomOf="@+id/txtv_firstname" />

    <TextView
        android:id="@+id/txtv_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        android:text="www"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txtv_lastname"
        app:layout_constraintTop_toBottomOf="@+id/txtv_lastname" />

    <TextView
        android:id="@+id/txtv_mobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        android:text="www"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txtv_phoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/txtv_phoneNumber" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/ic_contact_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>